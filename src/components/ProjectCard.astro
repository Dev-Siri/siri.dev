---
import { Image } from "astro:assets";

import { Icon } from "astro-icon";
import type { Project } from "../data";

interface Props extends Project {}

const { name, description, source, image, link } = Astro.props;
---

<article class="postcard-animation text-left shadow-md shadow-gray-800 bg-semi-dark-gray w-fit rounded-xl">
  <Image src={image.src} alt={name} height={image.height} width={image.width} class="rounded-xl aspect-video" />
  <div class="p-5">
    <p class="text-4xl font-bold leading-normal">
      {name}
    </p>
    <p class="ml-1 text-gray-400">
      {description}
    </p>
  </div>
  <div class="flex p-5">
    <a href={source} target="_blank" rel="noopener noreferrer" class="bg-gray-700 rounded-md pr-4 flex p-3 items-center">
      <Icon name="mdi:github" height={30} />
      <p class="ml-3">Github</p>
    </a>
    {
      link && (
        <a href={link} target="_blank" rel="noopener noreferrer" class="ml-4 bg-accessible-blue rounded-md pr-4 flex p-3 items-center">
          <Icon name="mdi:link" height={30} />
          <p class="ml-3">Deployed URL</p>
        </a>
      )
    }
  </div>
</article>
