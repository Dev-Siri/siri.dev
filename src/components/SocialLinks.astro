---
import { Icon } from "astro-icon";
import { socialLinks } from "../data";
---

<div class="flex gap-6 w-full justify-center">
  {
    socialLinks.map(socialLink => (
      <a href={socialLink.link} target="_blank" rel="noreferrer noopener" title={socialLink.name}>
        <Icon name={socialLink.icon} height={30} width={30} color={socialLink.iconColor} />
      </a>
    ))
  }
</div>
