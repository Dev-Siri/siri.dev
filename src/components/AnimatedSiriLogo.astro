---
interface Props {
  height?: number;
  width?: number;
}

const { height = 192, width = 192 } = Astro.props;
---

<video
  src="/images/siri-logo-animation.mp4"
  autoplay
  loop
  muted
  {height}
  {width}
  class="rounded-full"
  transition:name="siri-animated-logo"
  role="presentation"
  aria-label="Siri Logo Animation"
  aria-roledescription="Animation on Loop"
>
</video>
